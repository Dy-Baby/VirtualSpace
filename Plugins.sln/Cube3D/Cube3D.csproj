<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFrameworks>
            netcoreapp3.1;
            net5.0-windows10.0.20348.0;net5.0-windows10.0.22000.0;
            net6.0-windows10.0.20348.0;net6.0-windows10.0.22000.0;
        </TargetFrameworks>
        <UseWPF>true</UseWPF>
        <UseWindowsForms>True</UseWindowsForms>
        <CsWinRTEnabled>false</CsWinRTEnabled>
    </PropertyGroup>

    <ItemGroup Condition="&#xA;           '$(TargetFramework)' == 'net5.0-windows10.0.20348.0' Or '$(TargetFramework)' == 'net5.0-windows10.0.22000.0'&#xA;        Or '$(TargetFramework)' == 'net6.0-windows10.0.20348.0' Or '$(TargetFramework)' == 'net6.0-windows10.0.22000.0' ">
        <PackageReference Include="Microsoft.Windows.CsWinRT" Version="1.4.1" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="Properties\**" />
        <EmbeddedResource Remove="Properties\**" />
        <None Remove="Properties\**" />
        <Page Remove="Properties\**" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Bridge\Bridge.csproj" />
        <ProjectReference Include="..\ScreenCapture\ScreenCapture.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Helpers\" />
    </ItemGroup>

</Project>
