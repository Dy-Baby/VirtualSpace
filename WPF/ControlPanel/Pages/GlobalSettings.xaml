<ui:Page
    x:Class="ControlPanel.Pages.GlobalSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <ComboBox
                x:Name="LanguageChooser"
                ui:ControlHelper.Header="Languages"
                AutomationProperties.AutomationId="LanguageChooser"
                VerticalAlignment="Center"
                SelectionChanged="LanguageChooser_OnSelectionChanged" />
        </StackPanel>
    </Grid>
</ui:Page>